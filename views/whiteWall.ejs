                <el-menu-item index="选项2">选项2</el-menu-item>
                <el-menu-item index="选项3">选项3</el-menu-item>
            </el-submenu>
        </el-menu>
        <div class="container">
            <div class="grid">
                <div class="grid-item">
                    <div class="desc">
                        <img src="/images/avatar.jpg" alt="">
                        <div>
                            <div>欢迎新朋友你的到来</div>
                            <div>大胆向TA表白吧</div>
                        </div>
                    </div>
                    <div class="nick">
                        <input type="checkbox">匿名发表
                    </div>
                    <div class="info">
                        <textarea name="info" cols="30" rows="5" placeholder="听说在这里表白，成功率更高哦！">
                        </textarea>
                        <div class="btn">填好了，起飞</div>
                    </div>
                </div>
                <div class="grid-item" v-for="item in content">
                    <div class="header">头部</div>
                    <div class="content">
                        {{item.text}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
