<script type="text/javascript">
    $(function(){
        $(".second-image").click(function(e){
            var id = $(this).attr("data-id");
            var x = e.clientX;
            //点击第一个
            if(id == 1){
                $("#slide").animate({
                    "margin-left":"0"
                },500);
            }else if(id == 6){
                // 点击最后一个
                $("#slide").animate({
                    "margin-left":"-450"
                },500);
            }else{
                if(x > 740){
                    $("#slide").animate({
                        "margin-left":"-=770"
                    },500);
                }else{
                    $("#slide").animate({
                        "margin-left":"+=770"
                    },500);
                }

            }
        })
    })
