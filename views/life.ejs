                var _this = this
                this.handleAjax("/exit", "get", {}, function(data) {
                    if (data == "1") {
                        _this.$message({
                            message: '退出成功',
                            type: 'warning'
                        })
                        window.location.href = "/login"
                    }
                })
            },
            // 个人信息请求
            initUser() {
                var _this = this
                this.handleAjax("/userInfo", 'get', {}, function(data) {
                    if (data == '0') {
                        // 未注册
                        _this.isUser = false
                        _this.$message.error("sorry,您还未注册哦")
                    } else if (data == '1') {
                        // 未登录
                        _this.isUser = false
                        _this.initNews()
                    } else {
                        //  查询成功
                        _this.isUser = true
                        _this.user = JSON.parse(data)
                        _this.initNews()
                    }
                })
            },
            initNews() {
                var _this = this
                this.handleAjax('/getNews', 'get', {}, function(data) {
                    console.log(data)
                    _this.news = JSON.parse(data).slice(0, 3)
                })
            },
            // ajax请求
            handleAjax(url, method, data, handleSuccess) {
                $.ajax({
                    url: url,
                    type: method,
                    data: data,
                    cache: false,
                    success: handleSuccess,
                    error: function(err) {
                        console.log(err)
                    }
                })
            },
            // show list
            showList() {
                this.listIsShow = !this.listIsShow
                if (this.listIsShow) {
                    $(".el-icon--right").removeClass("el-icon-arrow-up").addClass("el-icon-arrow-down")
                } else {
                    $(".el-icon--right").removeClass("el-icon-arrow-down").addClass("el-icon-arrow-up")
                }
            },
            // 跳转到新闻详情页
            toNewsDesc(news) {
                window.location.href = '/newDesc?id=' + news._id
            }
        }
    })
