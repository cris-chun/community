    }
    .name>div{
        margin-left: 20px;
        margin-top: 10px;
        height: 50px;
        text-align: left;
        line-height: 60px;
    }
    .name>div>span{
        display: block;
        line-height: 20px;
    }
    .name>div>span:nth-child(2){
        font-weight: 400;
    }
    .icon-dropdown>i{
        font-weight: 600;
        font-size: 25px;
        line-height: 60px;
    }
    .dropdown-ul{
        padding: 0 10px;
    }
    .list{
        padding-top: 8px;
        padding-bottom: 8px;
        padding-left: 15px;
        border-bottom: 1px solid #dfdfdf;
        border-left: 1px solid #dfdfdf;
        border-right: 1px solid #dfdfdf;
        background: #f3f3f3;
        text-align: left;
        font-size: 14px;
