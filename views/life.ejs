            <div class="search-menu">
                <el-input class="search" placeholder="请输入内容" v-model="search" clearable>
                </el-input>
                <i class="el-icon-search search-icon"></i>
            </div>
            <div class="extenal" v-if="!isUser">
                <a href="/login">登录</a>
                <a href="/register">注册</a>
            </div>
        </el-menu>


        <el-row>
            <!-- left -->
            <el-col :span='12' :offset='4'>
                <div class="left">
                    <div class="content">
                        <div class="school_news">
                            <div class="title">校园新鲜事</div>
                            <div class="news" v-for="item in news" @click="toNewsDesc(item)">
                                <div class="news-content">
                                    <div class="news-title">{{item.title}}</div>
                                    <div class="news-desc">
                                        <pre>{{item.content}}</pre>
                                    </div>
                                </div>
                                <div class="news-image" v-if="item.image">
                                    <img :src="item.image" alt="">
                                </div>
                            </div>
                        </div>
                        <div class="school_news music">
                            <div class="title">每日音乐</div>
                            <div class="weather_item" v-for="item in music">
                                <img :src="item.image" alt="">
                                <div>{{item.title}}</div>
                                <div>{{item.desc}}</div>
                            </div>
                        </div>
                        <div class="school_news xiaohua">
                            <div class="title">开心一刻</div>
                            <div class="text" v-for="item in xiaohua">
                                <div>{{item.title}}</div>
                                <div>
                                    {{item.text}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </el-col>
            <!-- right -->
            <el-col :span='4'>
                <div class="right">
                    <el-row class="info">
                        <el-col :span="18" class="name">
                            <div>
                                <span>ztchun</span>
                                <span>ztchun.com</span>
                            </div>
                        </el-col>
                        <el-col :span="6">
                            <span class="icon-dropdown" @click="showList">
                                <i class="el-icon-arrow-down el-icon--right"></i>
                            </span>
                        </el-col>
                    </el-row>
                    <el-row>
                        <div class="list" v-for='item in list' v-if="listIsShow">
                            <i :class="item.icon"></i>
                            <span>{{item.text}}</span>
                        </div>
                    </el-row>
                </div>
            </el-col>
        </el-row>

        <div class="g-ft">
            <div class="m-ft2">
                <a target="_blank" rel="nofollow" href="/">首页</a>
                <span>|</span>
                <a target="_blank" rel="nofollow" href="/">社区话题</a>
                <span>|</span>
                <a target="_blank" rel="nofollow" href="/">休闲区</a>
                <span>|</span>
                <a target="_blank" rel="nofollow" href="/">表白墙</a>
                <span>|</span>
                <a target="_blank" rel="nofollow" href="/">个人主页</a></div>
            <div style="margin-top:10px;">ztchun版权所有　&copy;2017 - 2018　校园社区
            </div>
        </div>

    </div>
</body>
