        justify-content: center;
        align-content: center;
        width: 100%;
        padding: 10px;
        border-bottom: 1px solid #dfdfdf;
    }
    
    .news .news-content {
        flex: 1;
        text-align: left;
    }
    
    .news .news-image {
        width: 25%;
        text-align: center;
    }
    
    .news-content .news-title {
        font-size: 18px;
        font-weight: 600;
        padding: 5px;
        padding-left: 0px;
    }
    
    .news-content .news-desc {
        height: 100px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 5;
    }
    
    .news-content .news-desc pre {
        font-size: 14px;
        margin-top: -2px;
        color: #666;
        margin-left: 5px;
        white-space: pre-wrap;
        white-space: -moz-pre-wrap;
        white-space: -pre-wrap;
        white-space: -o-pre-wrap;
        word-wrap: break-word;
