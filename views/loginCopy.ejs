    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>
        $(function () {
            //页面初始化时，如果帐号密码cookie存在则填充
            console.log(getCookie('username'), getCookie('password'))
            if (getCookie('username') && getCookie('password')) {
                $(".username").val(getCookie('username'))
                $(".password").val(getCookie("password"))
            }

            //复选框勾选状态发生改变时，如果未勾选则清除cookie
            $(".check").change(function(){
                if(!$(this)[0].checked){
                    delCookie("username")
                    delCookie("password")
                }
            })

            $("input").focus(function(){
                $(".errorMsg").hide()
            })

            $("#login").click(function () {
                if ($(".username").val() == '' || $('.password').val() == ''){
                    $(".errorMsg").show().text("请输入用户名和密码")
                    return
                }
                $.ajax({
                    url: "/loginCheck",
                    type: "post",
                    data: {
                        username: $(".username").val(),
                        password: $(".password").val(),
                    },
                    // beforeSend: function(){
                    //     console.log("正在发送ajax请求")
                    // },
                    success: function (data) {
                        if (data == '1') {
                            if ($('.check')[0].checked){
                                setCookie("username", $(".username").val(), 7)
                                setCookie("password", $(".password").val(), 7)
                            }else{
                                delCookie("username")
                                delCookie("password")
                            }
                            window.location.href = "/"
                        } else if (data == "2") {
                            $(".errorMsg").show().text("您输入的密码错了哦")
                        } else if (data == '3') {
                            $(".errorMsg").show().text("您的邮箱还没有认证哦")
                        } else if (data == '0') {
                            $(".errorMsg").show().text("您还没有注册哦")
                        }
                    },
                    error: function (err) {
                        console.log("请求错误", err)
                    }
                })
            })

            //设置cookie  记住密码
            function setCookie(name, value, day) {
                var date = new Date();
                date.setDate(date.getDate() + day);
                document.cookie = name + '=' + value + ';expires=' + date;
            };
            // 获取cookie  记住密码
            function getCookie(name) {
                var reg = RegExp(name + '=([^;]+)');
                var arr = document.cookie.match(reg);
                if (arr) {
                    return arr[1];
                } else {
                    return '';
                }
            };
            //删除cookie
            function delCookie(name) {
                setCookie(name, null, -1);
            };
        })
    </script>
