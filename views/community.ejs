                <el-menu-item index="选项1">选项1</el-menu-item>
                <el-menu-item index="选项2">选项2</el-menu-item>
                <el-menu-item index="选项3">选项3</el-menu-item>
            </el-submenu>
        </el-menu>

        <!--首页菜单-->
        <div class="left">
            <div class="content">
                <div class="sub-content" v-for="item in content">
                    <i :class="'fa '+item.icon"></i>
                    <div v-if="item.text" class="text">{{item.text}}</div>
                </div>
            </div>
            <div class="twitter">
                <el-row v-for="item in container" class="content-row">
                    <el-col :span="3" class="avatar-left">
                        <img :src="item.avatar" alt="" class="avatar">
                    </el-col>
                    <el-col :span="20" class="content-right">
                        <div>
                            <div class="arrow"></div>
                            {{item.text}}
                         </div>
                    </el-col>
                </el-row>
            </div>
        </div>
        <div class="right">
            <div class="mine">

            </div>
        </div>
    </div>
